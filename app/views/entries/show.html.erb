<header>
  <h2>Showing entry</h2>

  <ul class="inline">
    <li><%= link_to fa('arrow-left').concat(' Back'), current_project_entries_path %></li>
    <li><%= link_to fa('pencil').concat(' Edit'), edit_current_project_entry_path(@entry) %></li>
  </ul>
</header>

<h3><%= @entry.title %></h3>

<p><%= render @entry.status %></p>

<% if @entry.description.blank? %>
  <p>No description.</p>
<% else %>
  <%= simple_format @entry.description %>
<% end %>

