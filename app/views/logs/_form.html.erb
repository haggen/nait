      <h2><%= pluralize(@log.errors.count, "error") %> prohibited this log from being saved:</h2>

      <ul>
      <% @log.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="row">
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>
  <div class="row">
    <%= f.label :entry_id %>
    <%= f.collection_select :entry_id, current_project.entries, :id, :title, :include_blank => 'None' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
