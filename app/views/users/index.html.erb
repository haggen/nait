<header>
  <h2>Listing users</h2>
  <%= link_to fa('plus').concat(' New user'), new_user_path %>
</header>

<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= user.name %>
        (<%= user.email %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No members.</p>
<% end %>