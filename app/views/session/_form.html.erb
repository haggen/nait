<%= alert :bad do %>
  <%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:
  <%= @session.errors.full_messages.to_sentence %>
<% end if @session.errors.any? %>

<%= form_for @session, :url => session_path, :html => {:class => 'form'} do |f| %>
  <div class="row">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  <div class="row">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'form-control' %>
  </div>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
