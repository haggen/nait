<header>
  <h2>Listing project statuses</h2>

  <ul class="inline">
    <li><%= link_to fa('arrow-left').concat(' Back'), current_project %></li>
    <li><%= link_to fa('plus').concat(' New status'), new_current_project_status_path %></li>
  </ul>
</header>

<% if @statuses.any? %>
  <ol>
    <% @statuses.each do |status| %>
      <li>
        <%= content_tag :span, status.name, :class => "tag #{status.color}" %>
        &mdash;
        <%= link_to fa('hand-o-up'), move_up_project_status_path(current_project, status), :method => :post, :remote => true %>
        <%= link_to fa('hand-o-down'), move_down_project_status_path(current_project, status), :method => :post, :remote => true %>
        <%= link_to fa('pencil'), edit_current_project_status_path(status) %>
        <%= destroy_link fa('trash-o'), current_project_status_path(status) %>
      </li>
    <% end %>
  </ol>
<% else %>
  <p>No statuses.</p>
<% end %>