<%= content_tag :div, :class => "alert #{type}" do %>
  <% case type
       when :error %><%= fa('exclamation-circle') %>
    <% when :success %><%= fa('check-circle') %>
    <% when :warning %><%= fa('warning') %>
    <% else %><%= fa('info-circle') %>
  <% end %>

  <%= message or body.call %>
<% end %>