<%= content_tag :div, :class => "alert #{type}" do %>
  <% case type
       when :bad %><%= fa('exclamation-circle') %>
    <% when :good %><%= fa('check-circle') %>
    <% when :info %><%= fa('info-circle') %>
    <% when :warn %><%= fa('warning') %>
  <% end %>

  <%= message or body.call %>
<% end %>